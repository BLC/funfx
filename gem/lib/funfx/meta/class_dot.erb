digraph G {
  rankdir = BT;

  fontname = "Bitstream Vera Sans"
  fontsize = 8

  node [
    fontname = "Bitstream Vera Sans"
    fontsize = 8
    shape = "record"
  ]

  edge [
    fontname = "Bitstream Vera Sans"
    fontsize = 8
  ]
  
<% classes.each do |klass| %>
  <%= klass.name %> [
    label = "{<%= klass.name %>|<%= klass.dot_property_list %>|<%= klass.dot_event_list %>}"
  ]
  <% if klass.superclass_name %><%= klass.name %> -> <%= klass.superclass_name %><% end %>
<% end %>
}